<Window x:Class="jwldnr.VisualLinter.ESLintInstaller"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Installing ESLint.."
    ContentRendered="OnContentRendered" MinWidth="400"
    MinHeight="100" SizeToContent="WidthAndHeight"
    Topmost="True" WindowStyle="SingleBorderWindow"
    WindowStartupLocation="CenterScreen">

    <StackPanel Margin="10">
        <ProgressBar x:Name="ProgressBar"
            Maximum="100" Minimum="0"
            Height="20" Visibility="Visible" />

        <TextBlock x:Name="CompletedMessage"
             HorizontalAlignment="Left"
             Text="ESLint installed!"
             Visibility="Collapsed" />

        <Button x:Name="OkButton"
            Click="OkButton_OnClick" Content="OK"
            HorizontalAlignment="Center" IsEnabled="False"
            Margin="0,5" MinWidth="50" Padding="5"
            VerticalAlignment="Center" />
    </StackPanel>
</Window>