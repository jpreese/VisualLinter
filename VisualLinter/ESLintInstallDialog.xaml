<Window x:Class="jwldnr.VisualLinter.ESLintInstallDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Install ESLint"
    SizeToContent="Height" Topmost="True"
    Width="400" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="10">
        <TextBlock Margin="0,0,0,5"
            Text="VisualLinter requires ESLint to analyze JavaScript files."
            TextWrapping="Wrap" />

        <TextBlock Margin="0,0,0,5"
            Text="Download and install ESLint now? (requires npm)"
            TextWrapping="Wrap" />

        <CheckBox x:Name="SkipInstallDialogCheckBox"
            Content="Don't show this message again"
            Margin="10" HorizontalAlignment="Center" />

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Click="ClickYes" IsDefault="True" Margin="5" Padding="20,5">Yes</Button>
            <Button IsCancel="True" Margin="5" Padding="20,5">No</Button>
        </StackPanel>
    </StackPanel>
</Window>